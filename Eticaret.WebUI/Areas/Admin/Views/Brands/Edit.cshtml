@model Brand

@{
    ViewData["Title"] = "Marka Düzenle";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Logo" />
            <input type="hidden" asp-for="CreateDate" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" type="file"/>
                <span asp-validation-for="Logo" class="text-danger"></span>
                @if (Model.Logo != null && !string.IsNullOrWhiteSpace(Model.Logo))
                {
                    <img src="/Img/@Model.Logo" height="100" class="mt-2" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil") Logoyu Kaldır
                    </label>
                }
            </div>
            <div class="form-group form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderNo" class="control-label"></label>
                <input asp-for="OrderNo" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center mt-3 mb-5">
                <input type="submit" value="Kaydet" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Liste'ye Dön</a>
            </div>
        </form>
    </div>
</div>

