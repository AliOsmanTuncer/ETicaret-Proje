@model IEnumerable<Order>

@{
    ViewData["Title"] = "Siparişler";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus"></i>Yeni Ekle
    </a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.Name)
                    @Html.DisplayFor(modelItem => item.AppUser.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderState)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
