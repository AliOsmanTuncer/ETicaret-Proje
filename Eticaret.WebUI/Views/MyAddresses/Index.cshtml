@model IEnumerable<Address>

@{
    ViewData["Title"] = "Adresler";
}

<style>
    td.fixed-height {
        width: 180px; /* Sabit genişlik */
        max-width: 180px;
        height: 22px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
<div class="bg-light p-4 rounded shadow-sm">
<h2 class="text-center">Kayıtlı Adreslerim</h2>
    </div>
<hr />

<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus"></i>Yeni Adres Ekle
    </a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeliveryAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBillingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeliveryAddress)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.AddressGuid">
                        <i class="fa-solid fa-pen"></i> Düzenle
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AddressGuid">
                        <i class="fa-solid fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
