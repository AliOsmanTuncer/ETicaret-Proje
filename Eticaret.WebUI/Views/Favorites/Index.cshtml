@model List<Product>

@{
    ViewData["Title"] = "Favorilerim";
}

<section class="container my-1">
    <div class="bg-light p-4 rounded shadow-sm">
        <h2 class="text-center">Favorilerim</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table table-striped table-hover">
                        <tr>
                            <th></th>
                            <th>Ürün Adı</th>
                            <th>Ürün Fiyatı</th>
                            <th></th>
                        </tr>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="/Img/Products/@item.Image" alt="Alternate Text" height="40" />
                                    </td>
                                    <td>
                                        <a class="nav-link text-dark" href="/Products/Details/@item.Id">
                                            @item.Name
                                        </a>
                                    </td>
                                    <td>
                                        @item.Price.ToString("c")
                                    </td>
                                    <td>
                                        <form asp-action="Remove" asp-controller="Favorites">
                                            <input type="hidden" name="ProductId" value="@item.Id" />
                                            <button class="btn btn-sm btn-danger" type="submit">
                                                <i class="bi-x-lg"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <div class="container d-flex justify-content-center align-items-center" style="height: 50vh;">
                        <div class="alert alert-warning my-5 text-center">
                            <h5>Henüz hiç bir ürünü favorilerinize eklemediniz!</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
