@model LoginViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "_AccountLayout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 400px; width: 100%;">
        <main class="form-signin">
            <form asp-action="SignIn" method="post">
                <div class="text-center">
                    <img src="/Img/SiteLogo2.png" alt="Site Logo" class="mb-3" width="72">
                </div>
                <h1 class="h4 mb-3 text-center">Üye Girişi</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <label for="floatingInput">Email Adres</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Şifre" />
                    <label for="floatingPassword">Şifre</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check text-start mb-3">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckDefault" />
                    <label class="form-check-label" for="flexCheckDefault">
                        Beni Hatırla
                    </label>
                </div>

                <button class="btn btn-primary w-100 mb-3" type="submit">Giriş Yap</button>
                <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />

                <div class="text-center mt-2">
                    <a href="/Account/SignUp" class="text-decoration-none">Üye Ol</a> |
                    <a href="/Account/PasswordRenew" class="text-decoration-none">Şifremi Unuttum</a>
                </div>
            </form>
        </main>
    </div>
</div>
